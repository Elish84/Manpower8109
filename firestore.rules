rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed(){ return request.auth != null; }

    match /{document=**} { allow read, write: if false; }

    // V2
    match /forces/{forceId}/soldiers/{docId} {
      allow read, write: if isAuthed();
    }

    // Legacy for migration (אפשר להסיר אחרי שסיימת מיגרציה)
    match /{col}/{docId} {
      allow read, write: if isAuthed() && col.matches('^units_.*_soldiers$');
    }
  }
}
